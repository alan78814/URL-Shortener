<div class="container mt-5">
    <div class="row d-flex flex-column align-items-center">
        <div class="title mt-2 mb-2">
            <h1>URL Shortener</h1>
        </div>

        <div class="shortener-image mb-4">
            <i class="fas fa-link"></i>
        </div>

        <div class="form-group col-6">
            <form action="/" method="POST" class="d-flex flex-column align-items-center">
                <div class="inpur-url mb-2 col-12">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default">Input URL</span>
                        </div>
                        <input type="text" class="form-control" name="url" required>
                    </div>
                </div>

                <div class="shorten">
                    <button type="submit" class="btn btn-outline-primary">Shorten</button>
                </div>

                <div class="short-url mt-3">
                    <h2>{{shortUrl}}</h2>
                </div>
            </form>
        </div>
    </div>
</div>